<header class="navbar">
  <section class="navbar-section left">
    <%= link_to root_path do %>
      <%= image_tag 'logo.svg' %>
    <% end %>
  </section>
  <section class="nav-item navbar-section right">
    <% if user_signed_in? %>
      <div class="provider">
        <i class="fas fa-circle"></i>
        <div id="current_provider"></div>
      </div>
      <div class="dropdown">
        <%= link_to "#", class: "btn btn-link dropdown-toggle",tabindex:"0" do %>
          <figure class="avatar profile">
            <%= image_tag avatar_url(current_user), class: "round-img" %>
          </figure>
        <% end %>
        <!--      dropdown menu-->
        <ul class="menu">
          <li><%= link_to "Edit User", edit_user_registration_path %></li>
          <li><%= link_to "Sign Out", destroy_user_session_path, class:"dropdown-item",method: :delete %></li>
        </ul>
      </div>
      <div id="user_address"></div>
    <% else %>
      <button class="btn"><%= link_to "Sign In", new_user_session_path %></button>
    <% end  %>
    <%= javascript_pack_tag 'navbar' %>
  </section>
</header>


