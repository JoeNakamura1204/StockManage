<h3>Profile</h3>
<div class="divider"></div>

<div class="columns col-gapless">
  <div class="column col-6">
    <%= form_for(resource, as: resource_name, class:"form-group",url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :name, class:"form-label" %>
        <%= f.text_field :name,class:"form-input", autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field">
        <%= f.label :email, class:"form-label" %>
        <%= f.email_field :email,class:"form-input", autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password, class:"form-label"  %>
        <%= f.password_field :password,class:"form-input", autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class:"form-label"  %>
        <%= f.password_field :password_confirmation,class:"form-input", autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :current_password, class:"form-label" %>
        <%= f.password_field :current_password, class:"form-input",autocomplete: "current-password" %>
      </div>
      <div class="divider"></div>
      <div class="actions">
        <%= f.submit "Save changes", class:"btn btn-primary login" %>
      </div>
    <% end %>
  </div>

  <div class="column col-6 col-mr-auto profile">
      <%= image_tag avatar_url(@user), class: "round-img profile" %>
  </div>

</div>

