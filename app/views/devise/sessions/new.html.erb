<div class="columns">
  <div class="column col-4 col-mx-auto">
    <div class="col-content">
      <div class="login-text">
        <h2>Welcome back</h2>
        <p>Login to manage your account.</p>
      </div>

      <div>
        <%= form_for(resource, as: resource_name, class:"form-group", url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, class:"form-label" %>
            <%= f.email_field :email, autofocus: true, class:"form-input",autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :password ,class:"form-label"%>
            <%= f.password_field :password, class:"form-input", autocomplete: "current-password" %>
          </div>
          <div class="login-bottom">
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <i class="form-icon"></i> Remember me
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Log in",class:"btn btn-primary login"%>
            </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
      </div>
    </div>
  </div>
</div>


